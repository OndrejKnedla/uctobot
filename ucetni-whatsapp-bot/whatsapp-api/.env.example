# Server Configuration
NODE_ENV=development
PORT=3000

# Meta WhatsApp Business API
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
WHATSAPP_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WEBHOOK_VERIFY_TOKEN=uctobot-verify-token-2024
WHATSAPP_API_VERSION=v18.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/whatsapp_api

# Redis
REDIS_URL=redis://localhost:6379

# Rate Limits (Optional - will use defaults if not set)
WEEKLY_LIMIT_NEW=20
WEEKLY_LIMIT_REGULAR=40
WEEKLY_LIMIT_VERIFIED=60
WEEKLY_LIMIT_PREMIUM=500
DAILY_BURST_LIMIT=15
HOURLY_BURST_LIMIT=5
MIN_SECONDS_BETWEEN_MESSAGES=10

# Monitoring & Alerts
FREE_TIER_LIMIT=1000
ALERT_THRESHOLD_PERCENT=80
CRITICAL_THRESHOLD_PERCENT=95

# Business Logic
ICO_VERIFICATION_URL=https://ares.gov.cz/ekonomicke-subjekty-v-be/rest/ekonomicke-subjekty/
TRUST_LEVEL_UPGRADE_DAYS=7

# OpenAI (for future features)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# CORS (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Logging Level
LOG_LEVEL=info