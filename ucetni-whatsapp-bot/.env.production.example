# =============================================================================
# ÚčetníBot - Production Environment Configuration
# =============================================================================
# CRITICAL: Use actual production values and keep secure!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=generate-with-openssl-rand-hex-32
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL Required)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# =============================================================================
# TWILIO WHATSAPP API (Production Credentials)
# =============================================================================
TWILIO_ACCOUNT_SID=your_production_account_sid
TWILIO_AUTH_TOKEN=your_production_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+your_approved_business_number

# =============================================================================
# AI PROCESSING (GROQ Production)
# =============================================================================
GROQ_API_KEY=your_groq_production_api_key

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_URL=https://your-domain.com

# =============================================================================
# PAYMENT PROCESSING (Production Keys)
# =============================================================================
# Primary payment provider
PAYMENT_PROVIDER=stripe

# Stripe Production Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret
STRIPE_PRICE_ID=price_your_live_monthly_subscription_price_id

# Comgate Production Configuration (Czech payment gateway)
COMGATE_MERCHANT_ID=your_production_merchant_id
COMGATE_SECRET=your_production_comgate_secret

# =============================================================================
# EMAIL CONFIGURATION (Invoice Delivery)
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=invoices@ucetni-bot.cz
SMTP_PASSWORD=your_production_email_app_password
FROM_EMAIL=noreply@ucetni-bot.cz
FROM_NAME=ÚčetníBot

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
TZ=Europe/Prague

# =============================================================================
# REDIS CONFIGURATION (if using caching)
# =============================================================================
REDIS_URL=redis://redis:6379