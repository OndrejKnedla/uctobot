# =============================================================================
# ÚčetníBot - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to git!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-generate-with-openssl-rand-hex-32
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./ucetni_bot.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# Docker PostgreSQL (when using docker-compose)
# DATABASE_URL=postgresql+asyncpg://postgres:password@db:5432/ucetni_bot

# PostgreSQL connection details (for docker-compose)
POSTGRES_DB=ucetni_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-db-password
POSTGRES_PORT=5432

# =============================================================================
# TWILIO WHATSAPP API
# =============================================================================
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# =============================================================================
# AI PROCESSING (GROQ)
# =============================================================================
# Get from https://console.groq.com
GROQ_API_KEY=your_groq_api_key

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Development (ngrok or localtunnel)
WEBHOOK_URL=https://your-ngrok-url.com/webhook/whatsapp

# Production
# WEBHOOK_URL=https://your-domain.com/webhook/whatsapp

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Sentry for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# REDIS CONFIGURATION (optional, for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# TIMEZONE & LOCALIZATION
# =============================================================================
TZ=Europe/Prague
LOCALE=cs_CZ.UTF-8

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_monthly_subscription_price_id
PAYMENT_PROVIDER=stripe

# Comgate Configuration (Czech payment gateway)
COMGATE_MERCHANT_ID=your_comgate_merchant_id
COMGATE_SECRET=your_comgate_secret

# =============================================================================
# EMAIL CONFIGURATION (for invoice sending)
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@ucetni-bot.cz
FROM_NAME=ÚčetníBot

# =============================================================================
# RATE LIMITING (optional)
# =============================================================================
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_BURST=10

# =============================================================================
# FEATURE FLAGS (optional)
# =============================================================================
# ENABLE_ANALYTICS=true
# ENABLE_NOTIFICATIONS=true
# ENABLE_BANK_IMPORT=false