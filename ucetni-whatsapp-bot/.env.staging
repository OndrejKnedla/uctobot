# Staging Environment
ENVIRONMENT=staging
DEBUG=false
SECRET_KEY=staging-secret-key-change-in-production
PORT=8000

# Database - PostgreSQL for staging
DATABASE_URL=postgresql+asyncpg://user:password@staging-db-host:5432/ucetni_bot_staging

# Twilio Staging Settings
TWILIO_ACCOUNT_SID=your_staging_twilio_account_sid
TWILIO_AUTH_TOKEN=your_staging_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+your_staging_whatsapp_number

# Groq API
GROQ_API_KEY=your_staging_groq_api_key

# Staging webhook
WEBHOOK_URL=https://staging.ucetni-bot.cz/webhook/whatsapp

# Error tracking
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Timezone
TZ=Europe/Prague

# Staging flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=false